{
    "name": "slince/composer-registry-manager",
    "description": "Composer registry manager",
    "keywords": ["composer registries", "composer registries manager", "switch composer registries", "composer", "registries"],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Slince",
            "email": "taosikai@yeah.net"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "composer-plugin-api": "^1.1",
        "symfony/filesystem": "^2.0|^3.0|^4.0",
        "symfony/console": "^2.0|^3.0|^4.0",
        "symfony/process": "^2.0|^3.0|^4.0",
        "dnoegel/php-xdg-base-dir": "^0.1"
    },
    "require-dev": {
        "composer/composer": "^1.5",
        "phpunit/phpunit": "^5.0|^6.0"
    },
    "autoload": {
        "psr-4": {
            "Slince\\Crm\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Slince\\Crm\\Tests\\": "./tests"
        }
    },
    "extra":{
        "class": "Slince\\Crm\\Plugin"
    },
    "bin": ["bin/crm"]
}
